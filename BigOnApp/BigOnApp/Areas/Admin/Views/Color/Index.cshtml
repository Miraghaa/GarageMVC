                                            <a class="btn btn-primary">
                                                <i class="fa-solid fa-pen-nib"></i>Update
                                            </a>
                                            <a class="btn btn-info">
                                                <i class="fa-solid fa-info"></i>Edit
                                            </a>
                                            <a class="btn btn-danger">
                                                <i class="fa-solid fa-trash"></i>Delete
                                            </a>
                                            
                                        </td> *@
                                    </tr>
                                }
